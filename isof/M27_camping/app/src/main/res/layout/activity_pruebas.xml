<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">


    <Button
        android:id="@+id/button_pruebas_cajanegra"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="Pruebas caja negra"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_prueba_volumen"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="Pruebas volumen"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/button_prueba_sobrecarga"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:text="Pruebas sobrecarga"
        android:layout_marginTop="16dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

</LinearLayout>
